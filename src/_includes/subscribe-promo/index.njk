{%- set moduleCSS = "/_includes/module.css" -%}
{% css page,
moduleCSS %}
{%- set promoCSS = "/_includes/icon-promo.css" -%}
{% css page,
promoCSS %}

<section class="{% className moduleCSS, 'root' %} {% className promoCSS, 'root' %}">
  {% from 'squiggle-banner/index.njk' import squiggleTop %}
  {{ squiggleTop(page, gray=false) }}
  <div class="{% className promoCSS, 'icon' %}">
    <img src="confboxAsset('/assets/youtube-icon.svg')" alt="YouTube">
  </div>
  <h1 class="{% className promoCSS, 'title' %}">Got a question? Ask it on YouTube.</h1>
  <p class="{% className promoCSS, 'blurb' %}">Ask all your burning questions in the YouTube comments.</p>
  <a href="https://www.youtube.com/channel/UCnUYZLuoy1rq1aVMwx4aTzw?sub_confirmation=1" target="_blank" rel="noopener noreferrer" class="{% className promoCSS, 'button' %} {% className promoCSS, 'button-red' %}">Subscribe</a>
</section>
